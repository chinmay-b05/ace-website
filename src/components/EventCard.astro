---
import FormattedDate from './FormattedDate.astro';
interface Props {
  eventName: string;
  category: string;
  date: string;
  venue: string;
  id: number;
  state: string;
  maxTeamSize: number;
  className?: string;
  image: string;
}
const { eventName, category, date: dateRecieved, venue, id, state, maxTeamSize, className, image } = Astro.props;
---

<div class={`card max-w-[300px] w-[300px] h-[410px] rounded-xl relative bg-[#1b1b1b] ${className}`}>
  <div class="card-image w-full h-[50%] max-h-[50%] overflow-hidden">
    <img class="h-full object-center w-full object-fill" src={image} />
  </div>

  <div class="card-price-tag"><span class="price-value">{state === 'COMPLETED' ? 'View' : 'Register'}</span></div>

  <div class="card-info">
    <div class="left-info">
      <span class="product-title truncate text-lg pt-2">{eventName}</span>
      <p class="feature-sub-title text-sm font-bold">Type</p>
      <span class="feature-desc">{category}</span>
      {
        maxTeamSize == 1 && (
          <p class="font-extrabold bg-[#0664FC] rounded-full w-fit text-white px-2 py-1 text-lg">SOLO</p>
        )
      }
      {
        maxTeamSize > 1 && (
          <p class="font-extrabold bg-[#0664FC] rounded-full w-fit text-white px-2 py-1 text-lg">TEAM</p>
        )
      }
    </div>
    <div class="right-info">
      <ul class="features-list">
        <li class="list-item text-xs">
          <p class="feature-sub-title pt-1">Date</p>
          <FormattedDate date={dateRecieved} />
        </li>
        <li class="list-item">
          <p class="feature-sub-title">Venue</p>
          <span class="feature-desc">{venue}</span>
        </li>
      </ul>
    </div>
  </div>
  <div class="add-to-cart-btn">
    <button class="mr-9">View Event</button>
  </div>
</div>

<style>
  .card {
    overflow: hidden;
  }

  .card .card-image {
    position: relative;
    display: block;
    margin: auto;
    color: #c8c8c8;
    filter: drop-shadow(0 0 5px #111111);
  }

  .card .card-info {
    height: 100%;
    border-radius: 12px 12px 0 0;
    width: 100%;
    color: #fff;
    display: flex;
    background: linear-gradient(#4f4f4f64, transparent);
  }

  .card .card-info {
    font-size: 0.8rem;
    max-height: 150px;
  }

  .card .card-info .left-info {
    width: 52%;
  }

  .card .card-info .right-info {
    width: 48%;
  }

  .card .card-info .left-info .feature-sub-title {
    font-size: 13px;
    font-weight: bold;
  }

  .card .card-info .left-info,
  .card .card-info .right-info {
    font-size: 12px;
    padding: 16px;
  }

  .card .card-info .left-info .product-title {
    line-height: 1.1;
    letter-spacing: 0.4px;
    font-weight: bold;
    margin-bottom: 18px;
    display: block;
  }

  .card .card-info p {
    font-size: 10px;
    margin-top: 12px;
    line-height: 1.2;
    letter-spacing: 0.3px;
    font-weight: normal;
  }

  .card .card-info .right-info {
    margin: 0;
    position: relative;
  }

  .card .card-info .right-info::before {
    position: absolute;
    content: '';
    width: 2px;
    height: calc(100% - 20px);
    background: rgb(6, 100, 252);
    left: -5px;
  }

  .card .card-info .right-info ul {
    margin: 0;
    list-style: none;
  }

  .card .card-info .right-info ul li {
    padding: 0;
    margin: 25px 0;
  }

  .card .card-info .right-info ul li:first-child {
    margin-top: 0;
  }

  .card .card-info .right-info ul li p.feature-sub-title {
    font-size: 12px;
    margin-bottom: 5px;
    letter-spacing: 0.3px;
    line-height: 1;
    color: rgb(6, 100, 252);
    font-weight: bold;
    text-transform: uppercase;
  }

  .feature-sub-title {
    font-size: 12px;
    margin-bottom: 5px;
    letter-spacing: 0.3px;
    line-height: 1;
    color: rgb(6, 100, 252);
    font-weight: bold;
    text-transform: uppercase;
  }

  .add-to-cart-btn {
    position: absolute;
    left: 35%;
    bottom: 12px;
    margin-top: 30px;
    width: 100%;
  }

  .add-to-cart-btn button {
    border: none;
    font-size: 10px;
    background: linear-gradient(45deg, transparent, rgb(6, 100, 252) 40%, rgb(6, 100, 252), #b0d1ff 60%, transparent);
    padding: 6px 10px;
    color: #fff;
    font-weight: bold;
    background-size: 200%;
    background-position: 0% 0%;
    text-transform: uppercase;
    border-radius: 30px;
    transition: 0.4s ease-in-out;
  }

  .card .card-price-tag {
    position: absolute;
    right: 12px;
    top: 0;
    color: #fff;
    font-size: 0.6rem;
    font-weight: 600;
    padding: 3px 10px;
    border-radius: 0 0 5px 5px;
    background: linear-gradient(rgb(6, 100, 252), #08388f);
  }

  .card::before {
    position: absolute;
    content: '';
    height: 90px;
    width: 90px;
    border-radius: 50%;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgb(6, 100, 252);
    filter: blur(25px);
    box-shadow: 0 0 70px 0 #0655d0;
  }

  .card .add-to-cart-btn button:hover {
    background-position: 100% 100%;
  }
</style>
